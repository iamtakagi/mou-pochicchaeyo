{
  "name": "mou-pochicchaeyo-chrome-ext",
  "manifest_version": 3,
  "version": "1.1.0",
  "description": "もうポチっちゃえよ Chrome Extension",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.jp/gp/cart/view.html*",
        "https://www.apple.com/jp/shop/bag*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["video.mp4"],
      "matches": ["<all_urls>"]
    }
  ]
}
