{
  "name": "もうポチっちゃえよ",
  "author": "iamtakagi",
  "manifest_version": 3,
  "version": "1.3.1",
  "description": "カートで悩んでる時にポチらせます",
  "permissions": [],
  "action": {
    "default_title" : "もうポチっちゃえよ",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.jp/gp/cart/view.html*",
        "https://www.apple.com/jp/shop/bag*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["video.mp4"],
      "matches": ["<all_urls>"]
    }
  ]
}
